{
  "name": "aloeviate-server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "git@github.com:Jomark031497/aloeviate-server.git",
  "author": "Jomark Pangan <jomarkrazonpangan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "start": "node dist/index.js",
    "dev": "nodemon dist/index.js",
    "build:watch": "tsc -w",
    "migrate": "yarn build && yarn mikro-orm migration:create",
    "migrate:run": "yarn build && yarn mikro-orm migration:up"
  },
  "devDependencies": {
    "@types/connect-redis": "^0.0.18",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.17.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.7.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@mikro-orm/cli": "^5.2.0",
    "@mikro-orm/core": "^5.2.0",
    "@mikro-orm/migrations": "^5.2.0",
    "@mikro-orm/postgresql": "^5.2.0",
    "argon2": "^0.28.5",
    "connect-redis": "^6.1.3",
    "date-fns": "^2.28.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "husky": "^8.0.1",
    "ioredis": "^5.0.6",
    "pg": "^8.7.3",
    "pino": "^8.0.0",
    "pino-pretty": "^8.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
